{
  "name": "bsc-triangular-arbitrage-bot",
  "version": "2.0.0",
  "description": "Bot per arbitraggio triangolare su BSC Testnet con PancakeSwap - Senza flash loans",
  "main": "bot/index.js",
  "scripts": {
    "start": "node bot/index.js",
    "start:bsc": "NODE_ENV=production node bot/index.js",
    "start:dev": "NODE_ENV=development node bot/index.js",
    "start:triangular": "node scripts/start-triangular-monitor.js",
    "monitor": "node bot/monitor.js",
    "monitor:bsc": "NODE_ENV=production node bot/monitor.js",
    "monitor:triangular": "node scripts/start-triangular-monitor.js",
    "test": "npx hardhat test",
    "test:bsc": "npx hardhat test --network bscTestnet",
    "test:triangular": "node scripts/test-triangular-opportunities.js",
    "test:config": "node scripts/test-setup.js",
    "test:connection": "node scripts/test-connection.js",
    "test:simulation": "node scripts/test-simulation.js",
    "test:realistic": "node scripts/test-realistic-simulation.js",
    "test:full": "npm run test:config && npm run test:connection && npm run test:simulation",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:bsc": "npx hardhat run scripts/deploy.js --network bscTestnet",
    "deploy:triangular": "npx hardhat run scripts/deploy-triangular.js --network bscTestnet",
    "verify": "npx hardhat verify",
    "verify:bsc": "npx hardhat verify --network bscTestnet",
    "setup": "node scripts/setup.js",
    "setup:bsc": "node scripts/setup-bsc.js",
    "config": "node scripts/final-configuration.js",
    "config:check": "node scripts/config-check.js",
    "config:validate": "node scripts/config-validate.js",
    "config:reset": "node scripts/config-reset.js",
    "analyze": "node scripts/arbitrage-opportunity-analyzer.js",
    "analyze:costs": "node scripts/complete-cost-analysis.js",
    "analyze:bsc": "node scripts/bsc-cost-analysis.js",
    "analyze:profitability": "node scripts/profitability-analysis.js",
    "analyze:triangular": "node scripts/test-triangular-opportunities.js",
    "analyze:real": "node scripts/real-data-analyzer.js",
    "real-data": "node scripts/real-data-analyzer.js",
    "real-data:monitor": "node scripts/real-data-analyzer.js --monitor",
    "real-data:analyze": "node scripts/real-data-analyzer.js --analyze",
    "simulate": "node scripts/test-simulation.js",
    "simulate:realistic": "node scripts/test-realistic-simulation.js",
    "profit:stats": "node scripts/profit-statistics.js",
    "logs": "tail -f bsc-triangular-arbitrage.log",
    "logs:error": "tail -f bsc-error.log",
    "logs:profit": "tail -f bsc-profit.log",
    "logs:opportunities": "tail -f bsc-opportunities.log",
    "clean": "rm -rf artifacts cache",
    "clean:logs": "rm -f *.log",
    "clean:all": "npm run clean && npm run clean:logs"
  },
  "keywords": [
    "crypto",
    "arbitrage",
    "triangular",
    "pancakeswap",
    "bsc",
    "binance-smart-chain",
    "solidity"
  ],
  "author": "BSC Triangular Arbitrage Bot",
  "license": "MIT",
  "dependencies": {
    "@balancer-labs/v2-interfaces": "^0.4.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^5.3.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.8.0",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "chai": "^4.3.7",
    "hardhat": "^2.25.0",
    "mocha": "^10.2.0"
  }
}
