{
  "name": "dex-arbitrage-bot-multinetwork",
  "version": "2.0.0",
  "description": "Bot di arbitraggio DEX multi-network per BSC Testnet e Polygon Amoy",
  "main": "project-config.js",
  "scripts": {
    "project:overview": "node project-config.js overview",
    "project:sync": "node project-config.js sync",
    "project:validate": "node project-config.js validate",
    "deploy:single": "node deployment-manager.js deploy",
    "deploy:all": "node deployment-manager.js deploy-all",
    "setup:single": "node deployment-manager.js setup",
    "setup:full": "node deployment-manager.js full-setup",
    "analyze:single": "node deployment-manager.js analyze",
    "verify:deployments": "node deployment-manager.js verify",
    "sync:structure": "node deployment-manager.js sync",
    "status": "node deployment-manager.js status",
    "bsc:start": "cd BNB-Testnet && npm start",
    "bsc:setup": "cd BNB-Testnet && npm run setup:optimized",
    "bsc:deploy": "cd BNB-Testnet && npm run deploy:optimized",
    "bsc:analyze": "cd BNB-Testnet && npm run analyze",
    "amoy:start": "cd POL-Amoy && npm start",
    "amoy:setup": "cd POL-Amoy && npm run setup:optimized",
    "amoy:deploy": "cd POL-Amoy && npm run deploy:optimized",
    "amoy:analyze": "cd POL-Amoy && npm run analyze",
    "install:all": "npm install && cd BNB-Testnet && npm install && cd ../POL-Amoy && npm install",
    "clean": "rm -rf node_modules BNB-Testnet/node_modules POL-Amoy/node_modules",
    "logs": "tail -f BNB-Testnet/logs/main.log POL-Amoy/logs/main.log",
    "health": "curl -s http://localhost:3000/api/health && curl -s http://localhost:3001/api/health",
    "test:all": "cd BNB-Testnet && npm test && cd ../POL-Amoy && npm test"
  },
  "keywords": [
    "defi",
    "arbitrage",
    "dex",
    "bsc",
    "polygon",
    "ethereum",
    "trading",
    "crypto",
    "bot"
  ],
  "author": "DEX Bot Team",
  "license": "MIT",
  "dependencies": {
    "ethers": "^5.7.2",
    "winston": "^3.8.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "redis": "^4.6.5",
    "express-rate-limit": "^6.7.0"
  },
  "devDependencies": {
    "hardhat": "^2.17.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/dex-arbitrage-bot"
  },
  "bugs": {
    "url": "https://github.com/your-username/dex-arbitrage-bot/issues"
  },
  "homepage": "https://github.com/your-username/dex-arbitrage-bot#readme"
} 