{
  "name": "crypto-arbitrage-bot",
  "version": "2.0.0",
  "description": "Bot decentralizzato per arbitraggio crypto tra DEX con flash loan - Supporto Layer 2 (Polygon)",
  "main": "bot/index.js",
  "scripts": {
    "start": "node start.js",
    "start:testnet": "node start-testnet.js",
    "start:polygon": "node start-polygon.js",
    "start:polygon:testnet": "node start-polygon.js",
    "bot": "node bot/index.js",
    "deploy": "npx hardhat run scripts/deploy.js --network goerli",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon:mainnet": "npx hardhat run scripts/deploy.js --network polygon",
    "test": "npx hardhat test",
    "test:setup": "node scripts/test-setup.js",
    "test:autonomo": "node scripts/test-autonomo.js",
    "test:polygon": "node scripts/test-polygon.js",
    "compile": "npx hardhat compile",
    "setup": "node scripts/setup.js",
    "setup:polygon": "node scripts/setup-polygon.js"
  },
  "keywords": [
    "crypto",
    "arbitrage",
    "dex",
    "flash-loan",
    "ethereum",
    "polygon",
    "layer2",
    "solidity"
  ],
  "author": "Crypto Arbitrage Bot",
  "license": "MIT",
  "dependencies": {
    "@balancer-labs/v2-interfaces": "^0.4.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@openzeppelin/contracts": "^5.3.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "chai": "^4.3.7",
    "hardhat": "^2.14.0",
    "mocha": "^10.2.0"
  }
}
